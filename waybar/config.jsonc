      "good": 75,
      "warning": 30,
      "critical": 20
    },
    "format": "{capacity}% {icon}",
    "format-charging": "{capacity}% Û∞ÇÑ",
    "format-plugged": "Û∞ö•",
    "tooltip-format": "{capacity}% {power}Û±êã {timeTo} {cycles}Û∞§Å {health}Û±àë ",
