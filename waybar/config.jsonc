"wlr/taskbar": {
    "format": "{title}",
    "tooltip-format": "{title}",
    "on-click": "activate",
    "all-outputs": "false",
    "on-click-middle": "close",
    "ignore-list": [
       "Alacritty"
    ],
    "app_ids-mapping": {
      "firefoxdeveloperedition": "firefox-developer-edition"
    },
    "rewrite": {
"^.*nvim.*$":"ÔçØ"
    }
},
"custom/dunst": {
    "exec": "~/.config/waybar/scripts/dunst.sh",
    "on-click": "dunstctl set-paused toggle",
   "restart-interval": 1,
},
 "custom/niri-taskbar": {
    "exec": "~/taskbar/target/release/taskbar",
    "return-type": "json",
        "format": "{text}",
    "tooltip-format": "{}",
        "tooltip": true,
        "escape": false,
        "max-length": 300
  }
}
